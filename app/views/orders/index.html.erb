<div class= "row">
  <h1>Listing Orders</h1>
  <div class="pull-right range-query">
        <%= form_tag orders_path, method: :get do %>
          <%= text_field_tag 'search[date_from]', @search.date_from %>
          <%= text_field_tag 'search[date_to]', @search.date_to %>
          <%= submit_tag 'Search', class: 'btn search-button' %>
  <% end %>
  </div>
</div>

  <div class="media">
    <div class="media-body"></div>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Date</th>
            <th>Consigner</th>
            <th>Sku</th>
            <th>Order</th>
            <th>Title</th>
            <th>Price sold</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.date.strftime("%m/%d/%y") %></td>
              <td><%= order.consigner %></td>
              <td><%= order.sku %></td>
              <td><%= order.order_id %></td>
              <td><%= order.title %></td>
              <td><%= order.price_sold %></td>
              <td><%= link_to 'Show', order, class:  'btn btn-mini btn-success' %></td>

              <%#  Commented out edit and destroy, do not need at this time %>
              <%#<td><%= link_to 'Edit', edit_order_path(order) </td>%>
              <%#<td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } </td>%>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

<br>

